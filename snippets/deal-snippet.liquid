{% for dealPro in dealTime %}
{% capture currentProducID %}{{ product.id }}@{% endcapture %}
{% if dealPro contains currentProducID %}
{% if settings.prodetail_deal_label %}
<label class="deal-lable">{{ settings.prodetail_deal_heading}}</label>
{% endif %}
{% assign dealProTime = dealPro | replace: currentProducID,'' | replace: '_',' ' %}
<div class="deal-clock lof-clock-{{ product.id }}-detail"></div>
<script>
  //<![CDATA[
  jQuery(document).ready(function($){
    $(".lof-clock-{{ product.id }}-detail").lofCountDown({
      TargetDate:"{{ dealProTime }}",
      DisplayFormat:"<ul class='list-inline'><li class='day'>%%D%%<span>D<i>ays</i></span></li><li class='hours'>%%H%%<span>H<i>ours</i></span></li><li class='mins'>%%M%%<span>M<i>in</i></span></li><li class='seconds'>%%S%%<span>S<i>ec</i></span></li></ul>",
      FinishMessage: "Expired"
      });
  });
  //]]>
</script>
<style></style>
{% break %}
{% endif %}
{% endfor %}

