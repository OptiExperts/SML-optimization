



<div class="grid-uniform"  style="float:left;width:100%;">
  {% if settings.display_popup_newsletter %}
  <div class="entry-popup-main" data-newsletter id="entry-popup-modal">
    <div class="form-overlay">
      <div class="form-content">
        <div class="grid__item news_inner_blog">
          <div class="grid__item extra-large--two-thirds post-large--two-thirds large--two-thirds medium--two-thirds small--grid__item news-content">
            <a class="close close-popup" title="{{ 'general.password_page.close' | t }}">
              {% include 'icon-close' %}
            </a>
            <div class="title">
              <h2>{{ settings.popup_newsletter_title }}</h2>
            </div>
            <p class="content">{{ settings.popup_newsletter_message }}</p>
            <div id="theme-subscribe-cover">
              <div id="entry-popup-form">
                {% include 'newsletter-form' %}
                {% include 'social-links' %}
                <input id="exit" type="checkbox" name="exit">
                <label for="exit">
                  <span>{{ settings.form_note }}</span>
                </label>
              </div> 

            </div>
            
          </div>
          <div class="grid__item extra-large--one-third post-large--one-third large--one-third medium--one-half small--grid__item">
              <img class="logo" src="{{ 'popup_newsletter_img.jpg' | asset_url }}" alt="{{settings.popup_newsletter_title}}" >
            </div>
        </div>  
      </div>
    </div>
    {% endif %}
  </div>
