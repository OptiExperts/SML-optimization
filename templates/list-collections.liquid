<div class="grid-uniform list-collection-products">  
  
  <div class="container">
   {% if settings.use_custom_list_collection %}
  {% for link in linklists[settings.list-collections].links %}
  {% assign collection = link.object %}
    {% unless collection.handle == 'frontpage' %}
      {% assign collection_item_width = 'grid__item extra-large--one-third post-large--one-third large--one-third medium--one-half small--grid__item' %}
      {% assign featured = collection.handle %}
      {% include 'collection-grid-item' %}
    {% endunless %}
  {% endfor %}  
  {% else %}
  {% for collection in collections %}
    {% unless collection.handle == 'frontpage' %}
      {% assign collection_item_width = 'grid__item extra-large--one-third post-large--one-third large--one-third medium--one-half small--grid__item' %}
      {% assign featured = collection.handle %}
      {% include 'collection-grid-item' %}
    {% endunless %}
   {% endfor %}  
  {% endif %}  
   </div>
</div>