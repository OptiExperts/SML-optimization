<div class="wrapper">
  {% if section.settings.title != blank or section.settings.small_title  %}
  <div class="section-main-heading section-header--small">     
    {% if section.settings.title != blank %}
    <h2 class="section-header__title" style="color:{{ section.settings.title_clr }};">    
      {{ section.settings.title }}
    </h2>
    {% endif %}  
    {% if section.settings.small_title != blank %}
    <div class="short-desc"><p style="color:{{ section.settings.text_clr }};">{{ section.settings.small_title }}</p></div>
    {% endif %}  
    {% if section.settings.heading_image != blank %}
    <img src="{{ section.settings.heading_image | img_url: '200X' }}" alt="{{section.settings.title}}" />
    {% endif%}          
  </div>
  {% endif %}

  <div class="grid--uniform look-book-new">
    {% for block in section.blocks %}
    <div class="grid__item  text-{{ block.settings.align_text }}" {{ block.shopify_attributes }}>
      {% if block.settings.enable_image %}
      <div  class="feature-row__image-wrapper">
        {% if block.settings.image != blank %}
        <img  src="{{ block.settings.image | img_url: '1024x' }}"alt="{{ block.settings.image.alt | escape }}">
        {% else %}
        <img src="//via.placeholder.com/970x500">
        {% endif %}
      </div>
      {% endif %}
      <div  class="feature-row__text-wrapper">


        {% if block.settings.enable_subimage %}
        <div  class="sub-row__image-wrapper">
          {% if block.settings.small_image != blank %}
          <img  src="{{ block.settings.small_image | img_url: '750x750' }}"alt="{{ block.settings.image.alt | escape }}">
          {% else %}
          <img src="//via.placeholder.com/300x300">
          {% endif %}
        </div>
        {% endif %}



        <div class="look_content" style="background:{{block.settings.text_content_bg}}">
          {% if block.settings.title != blank %}
          <h3 class="h4" style="color:{{block.settings.title_clr}}">{{ block.settings.title | escape }}</h3>
          {% endif %}
          {% if block.settings.text != blank %}
          <div class="rte-setting" style="color:{{block.settings.text_clr}}">{{ block.settings.text }}</div>
          {% endif %}
          {% if block.settings.button_label != blank and block.settings.button_link != blank %}
          <a href="{{ block.settings.button_link }}" class="btn">
            {{ block.settings.button_label | escape }}
          </a>
          {% endif %}
        </div>


      </div>
    </div>
    {% endfor %}
  </div>

  {% if section.blocks.size == 0 %}
  {% include 'no-blocks' %}
  {% endif %}
</div>

{% schema %}
{

"name": "Lookbook style",
"class": "lookbook-style-section",
"settings": [
{
"type": "text",
"id": "title",
"label": "Heading",
"default": "Lookbook Style"
},    
{
"type": "color",
"id": "title_clr",
"label": "Title Color",
"default":"#000"
},

{
"type": "image_picker",
"id": "heading_image",
"label": "Image",
"info": "Size: 57x15"

},  
{
"type": "text",
"id": "small_title",
"label": "Small Heading"
},    
{
"type": "color",
"id": "text_clr",
"label": "Text color",
"default":"#000"
}


],
"blocks": [
{
"type": "text_block",
"name": "Column",
"settings": [
{
"type": "select",
"id": "align_text",
"label": "Text alignment",
"default": "left",
"options": [
{
"value": "left",
"label": "Left"
},

{
"value": "center",
"label": "Center"
},
{
"value": "right",
"label": "Right"
}
]
},

{
"type": "checkbox",
"id": "enable_image",
"label":"Show image",
"default": true
},
{
"type": "image_picker",
"id": "image",
"label": "Image"
},

{
"type": "text",
"id": "title",
"label":"Heading",
"default": "Add a title or tagline"

},

{
"type": "richtext",
"id": "text",
"label": "Text",
"default": "<p>Share blog posts, products, or promotions with your customers. Use this text to describe products, share details on availability and style, or as a space to display recent reviews or FAQs.</p>"

},
{
"type": "text",
"id": "button_label",
"label":"Button label"
},
{
"type": "url",
"id": "button_link",
"label":"Button link"
},

{
"type": "color",
"id": "title_clr",
"label": "Title Color",
"default":"#000"
},

{
"type": "color",
"id": "text_clr",
"label": "Text color",
"default":"#000"
},
{
"type": "color",
"id": "text_content_bg",
"label": "Content Bg Color",
"default":"#000"
}
]

}

]
}
{% endschema %}

