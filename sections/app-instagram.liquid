<div data-section-id="{{ section.id }}"  data-section-type="app-instagram" class="app_instagram_block">
  
 <div class="app-instagram text-center" >
  <div class="wrapper">
 {% if section.settings.title != blank or section.settings.small_title  %}
    <div class="section-main-heading section-header--small wow fadeInDown animated">     
      {% if section.settings.title != blank %}
      <h2 class="section-header__title" style="color:{{ section.settings.title_clr }};">    
        {{ section.settings.title }}
      </h2>
      {% endif %}  
      {% if section.settings.small_title != blank %}
      <div class="short-desc"><p style="color:{{ section.settings.text_clr }};">{{ section.settings.small_title }}</p></div>
      {% endif %}  
      {% if section.settings.heading_image != blank %}
      <img src="{{ section.settings.heading_image | img_url: '200X' }}" alt="title-img" />
      {% endif%}          
    </div>
    {% endif %} 
  <div id="insta-feed"></div>
      <div class="data-carousel-nav {{ section.id }}"></div> 
      {% if section.settings.button != blank %}
    <a style="margin-top:20px;" href="{{ section.settings.link }}" class="btn">{{ section.settings.button }}</a>
     {% endif %}
  </div>
  </div>
</div>

{% schema %}{
"name": "Instagram", 
"settings": [
{
"type": "header",
"content": "[Install this app](https:\/\/apps.shopify.com\/instafeed)"
},

  {
"type": "text",
"id": "title",
"label": "Heading",
"default": "New arrivals"
},    
{
"type": "color",
"id": "title_clr",
"label": "Title Color",
"default":"#000"
},

{
"type": "image_picker",
"id": "heading_image",
"label": "Image",
"info": "Size: 153x30"

},  
{
"type": "text",
"id": "small_title",
"label": "Small Heading"
},    
{
"type": "color",
"id": "text_clr",
"label": "Text color",
"default":"#000"
},
  {
  "type": "text",
  "id": "button",
  "label": "Button",
  "default": "View all"
  },	
  {
  "type": "url",
  "id": "link",
  "label": "Link URL"
  }
],
"presets": [
{
"name": "Instagram",
"category": "text"
}
]
}
{% endschema %}

