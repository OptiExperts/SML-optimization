<div data-section-id="{{ section.id }}"  data-section-type="theme-footer" class="theme-footer" style="{% if section.settings.footer_bg_img %} background-image:url('{{ section.settings.image_1 | img_url: 'master' }}');background-size:cover;background-repeat:no-repeat;{% else %} background-color:{{ section.settings.footer_bg_clr }};{% endif %}">
  <div class="background-overlay"></div>
  <footer class="footer"> 
    <div class="container">
      <div class="grid footer-inner">
        {% assign num_footer_columns = 0 %}  
        {% if section.settings.show_footer_text %}
        {% assign num_footer_columns = num_footer_columns | plus: 1 %}
        {% endif %}

        {%- assign footer_linklist = section.settings.footer_menu_1 %}
        {% if linklists[footer_linklist].links.size > 0 %}
        {% assign num_footer_columns = num_footer_columns | plus: 1 %}
        {% endif %}

        {%- assign footer_linklist = section.settings.footer_menu_2 %}
        {% if linklists[footer_linklist].links.size > 0 %}
        {% assign num_footer_columns = num_footer_columns | plus: 1 %}
        {% endif %}

        {%- assign footer_linklist = section.settings.footer_menu_3 %}
        {% if linklists[footer_linklist].links.size > 0 %}
        {% assign num_footer_columns = num_footer_columns | plus: 1 %}
        {% endif %}

        {% case num_footer_columns %}
        {% when 0 %}
        {% when 1 %}
        {% assign footer_column_width = 'text-left' %}
        {% when 2 %}
        {% assign footer_column_width = 'extra-large--one-half post-large--one-half large--one-half medium--one-whole' %}
        {% when 3 %}
        {% assign footer_column_width = 'extra-large--one-third post-large--one-third large--one-half medium--one-whole' %}  
        {% when 4 %}
        {% assign footer_column_width = 'extra-large--one-quarter post-large--one-quarter large--one-half medium--one-whole' %} 
        {% endcase %}

        {% if section.settings.show_footer_text %}
        <div class="footer-links-column">          
         {%comment%}
          {% if section.settings.show_footer_text %}
          <div class="grid__item {{ footer_column_width }} footer-welcome footer-caption">
            {% if section.settings.footer_text != blank  %}
            <h4 style="color:{{ section.settings.footer_heading_clr }};" class="dropdow-mb"><span>{{ section.settings.footer_text }}</span></h4>
            {% endif %}
            {% if section.settings.footer_short_text != blank  %}
            <p style="color:{{ section.settings.footer_txt_clr }};">{{ section.settings.footer_short_text }}</p>
            {% endif %}
            {% if section.settings.abt_link != blank %}   <a style="text-decoration:underline;color:{{ section.settings.abt_link_clr }};" href="{{ section.settings.abt_link }}">{{ section.settings.abt_link_text }} </a>{% endif %}
          </div>
          {% endif %}
{%endcomment%}
          
          {%- assign footer_linklist = section.settings.footer_menu_1 -%}
          {% if linklists[footer_linklist].links.size > 0 %}
          <div class="grid-menu menu_1">
            {% unless num_footer_columns == 1 %}
              <h4 class="hide-mobile" style="color:{{ section.settings.footer_heading_clr }};" class=""><span>{{ section.settings.footer_menu_1_title}}</span></h4>
              <button class="accordion mobile-show" id="defaultOpen">{{ section.settings.footer_menu_1_title}}</button>
            {% endunless %}
            <ul class="panel links{% if num_footer_columns == 1 %} inline-list{% endif %}">
              {% for link in linklists[section.settings.footer_menu_1].links %}
              <li><a href="{{ link.url }}" style="color:{{ section.settings.footer_link_clr }};">{{ link.title }}</a></li>
              {% endfor %}
            </ul>
          </div>
          {% endif %}
          

          {%- assign footer_linklist = section.settings.footer_menu_2 -%}
          {% if linklists[footer_linklist].links.size > 0 %}
          <div class="grid-menu menu_2">            
            <h4 class="hide-mobile" style="color:{{ section.settings.footer_heading_clr }};" class=""><span>{{ section.settings.footer_menu_2_title}}</span></h4>         
            <button class="accordion mobile-show" >{{ section.settings.footer_menu_2_title}}</button>
            <ul class="panel links{% if num_footer_columns == 1 %} inline-list{% endif %}">
              {% for link in linklists[section.settings.footer_menu_2].links %}
              <li><a href="{{ link.url }}" style="color:{{ section.settings.footer_link_clr }};">{{ link.title }}</a></li>
              {% endfor %}
            </ul>
          </div>
          {% endif %}
          {%- assign footer_linklist = section.settings.footer_menu_3 -%}
          {% if linklists[footer_linklist].links.size > 0 %}
          <div class="grid__item">            
            <h4 class="hide-mobile"  style="color:{{ section.settings.footer_heading_clr }};" class=""><span>{{ section.settings.footer_menu_3_title}}</span></h4>             
                <button class="accordion mobile-show" >{{ section.settings.footer_menu_3_title}}</button>
            <ul class="links{% if num_footer_columns == 1 %} inline-list{% endif %}">
              {% for link in linklists[section.settings.footer_menu_3].links %}
              <li><a href="{{ link.url }}" style="color:{{ section.settings.footer_link_clr }};">{{ link.title }}</a></li>
              {% endfor %}
            </ul>
          </div>
          {% endif %}
          
          {% if section.settings.show_contact %}
          
          <div class="grid-menu footer-contact footer-caption">
            {% if section.settings.footer_menu_4_title != blank %}        
            <h4 style="color:{{ section.settings.footer_heading_clr }};" class=""><span>{{ section.settings.footer_menu_4_title}}</span></h4> 
            {% endif %}

            {% if section.settings.footer_social_enable %}
            <div class="footer-icons">  
              {% if section.settings.social_title != blank %}
              <h4 style="color:{{ section.settings.footer_heading_clr }};">{{ section.settings.social_title }}</h4>   
              {% endif %}
              {% include 'social-links' %}
            </div>
            {% endif %} 
            <ul class="contact-inner">
              {% if section.settings.footer_address != blank %}
              <li class="address" style="color:{{ section.settings.footer_txt_clr }};">         
                <address>{{ section.settings.footer_address }}</address>
              </li>
              {% endif %}
               {% if section.settings.footer_contact_no != blank %}
              <li class="contact-phone" style="color:{{ section.settings.footer_txt_clr }};">
                {% if section.settings.footer_contact_no != blank %}
                {{ section.settings.footer_contact_no }}
                {% endif %}
              </li>
              {% if section.settings.office_hours != blank %}
              <li class="office-hours" style="color:{{ section.settings.footer_txt_clr }};">
                {{ section.settings.office_hours }}
              </li>
              {% endif %}
              {% if  section.settings.footer_contact_link != blank and section.settings.footer_contact_id != blank %}
              <li class="office-mail">
                <a style="color:{{ section.settings.footer_link_clr }};" href="mailto:{{ section.settings.footer_contact_link }}" style="color:{{ section.settings.footer_txt_clr }};">{{ section.settings.footer_contact_id }}</a>
                {% endif %} 
              </li>
              {% endif %}    
            </ul>
          </div>
          
          {% endif %} 
          {%comment%}
          {% if section.settings.show_contact  %}
