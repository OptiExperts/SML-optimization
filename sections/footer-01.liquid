              {% if  section.settings.footer_contact_link != blank and section.settings.footer_contact_id != blank %}
              <li class="office-mail">
                <a style="color:{{ section.settings.footer_link_clr }};" href="mailto:{{ section.settings.footer_contact_link }}" style="color:{{ section.settings.footer_txt_clr }};"><i class="material-icons">mail</i>{{ section.settings.footer_contact_id }}</a>
                {% endif %} 
              </li>
              {% endif %}       
            </ul>
          </div>
          {% endif %} 
          {%endcomment%}
        </div> 
        {% endif %}
        
 
     
      </div>
    </div>


