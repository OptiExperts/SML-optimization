        {% if  section.settings.copyright != blank %}
        <p style="color:{{ section.settings.copyright_clr }}" class="copyright center">{{ section.settings.copyright }} &copy; {{ 'now' | date: "%Y" }}, {{ shop.name }} {% if section.settings.show_powered_by %} {{ powered_by_link }}{% endif %}</p>
        {% endif %}
        {% if section.settings.footer_menu %}
