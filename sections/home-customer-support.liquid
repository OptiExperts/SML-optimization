<div data-section-id="{{ section.id }}"  data-section-type="customer-support" class="customer-support-section" style="float:left;width:100%;{% if section.settings.image_1 != blank %} background-image:url('{{ section.settings.image_1 | img_url: '1920X' }}');background-repeat:no-repeat;background-size:cover;background-position:center{% else %} background-color:{{ section.settings.bg_color }}{% endif %}">  

  <div class="container">
    {% if section.settings.show_overlay_bg_clr %}
    <div class="background-overlay"></div>
    {% endif%} 
    <div class="grid-uniform">
      <ul class="content-block" >         
        {% for block in section.blocks %}
          <div class="data-cover" >  
            <div class="data-wrapper" style="">
              <div class="icon">
                {% if block.settings.img_class != blank %}
                <img src="{{ block.settings.img_class | img_url: '40x' }}" alt="" />
                {% endif%}   
              </div>

              <div class="content"> 
                {% if block.settings.title != blank  %}  
                <h4 style="color:{{ block.settings.title_color }};">{{ block.settings.title }}</h4>
                {% endif %} 
                {% if block.settings.sub_title != blank  %}  
                <h4 style="color:{{ block.settings.sub_title_color }};">{{ block.settings.sub_title }}</h4>
                {% endif %} 
                {% if block.settings.desc != blank  %}  
                <p style="color:{{ block.settings.desc_color }};" class="desc">{{ block.settings.desc }}</p>
                {% endif %} 

                {% if block.settings.icon_cls != blank  %} 
                <a href="{{block.settings.link}}"  class="arrow-btn" style="color:{{block.settings.icon_color}}"><i class="{{block.settings.icon_cls}}"></i></a>
                {% endif %} 


              </div>   
            </div>
          </div>    
        {% endfor %}
      </ul>

    </div>
  </div>

</div>
<script>
  $(document).ready(function(){
    $('.content-block').slick({
      infinite: false,
      slidesToShow: 4,
      slidesToScroll: 4,
      dots: false,
   responsive: [
    {
      breakpoint: 976,
      settings: {
         arrows: true,
        slidesToShow: 3,
        slidesToScroll: 3,
        infinite: true,
        dots: false
      }
    },
    {
      breakpoint: 767,
      settings: {
        arrows: true,
        slidesToShow: 2,
        slidesToScroll: 2
      }
    },
    {
      breakpoint: 480,
      settings: {
        arrows: true,
        slidesToShow: 1,
        slidesToScroll: 1
      }
    }
    // You can unslick at a given breakpoint now by adding:
    // settings: "unslick"
    // instead of a settings object
  ]
});
  });
  
</script>
<style>

  .customer-support .data-cover .data-wrapper:hover .content h4::after { background:{{section.settings.iconhovertext_color}}!important;} 
  .customer-support .data-cover .data-wrapper .content h4::after { background: {{section.settings.border_color}}!important;}
  .customer-support .data-cover .data-wrapper:hover p,.support-block-type-6 .data-cover .data-wrapper:hover h4{}
  .customer-support .data-wrapper:hover .support_icon a::before {background:{{section.settings.iconhoverbg_color}};}
  .customer-support .data-wrapper:hover h4 {color:{{section.settings.iconhovertext_color}} !important;}
  .customer-support .arrow-btn:hover {color:{{section.settings.iconhovertext_color}}!important;}
  .customer-support .data-cover {margin-top:{{section.settings.banner_top_value}};}
  .customer-support-section .background-overlay {background:{{section.settings.overlay_bg_clr}};}
  .customer-support .contact-form input[type="email"] {border:1px solid {{section.settings.input_box_border}};background:transparent;}
 .customer-support .contact-form input[type="email"]::-webkit-input-placeholder {  color:{{ section.settings.input_box_place }};}
 .customer-support .contact-form input[type="email"]::-moz-placeholder { color:{{ section.settings.input_box_place }};}
 .customer-support .contact-form input[type="email"]::-moz-placeholder {  color:{{ section.settings.input_box_place }};}
 .customer-support .contact-form input[type="email"]::-ms-input-placeholder {  color:{{ section.settings.input_box_place }};}  
  .customer-support .contact-form input[type="email"] {  color:{{ section.settings.input_text_clr }};}
  .customer-support .contact-form input[type="email"]:focus {  border:1px solid {{ section.settings.input_text_clr }};color:{{section.settings.input_text_focusclr}};}

</style>



