<div data-section-id="{{ section.id }}" data-section-type="home-banner-with-text-1" class="home-banner-with-text-1"> 
  <div class="grid-uniform CollectionItems">    
    <div class="home-banner-text-cover" style="{% if section.settings.image_1 != blank %}background-image:url('{{ section.settings.image_1 | img_url: '1920X' }}');background-repeat:no-repeat;background-position:center center; {% else %}background-color:{{section.settings.background_color}};{% endif%}"  >
      <div class="wrapper">
        <div class="grid__item extra-large--one-third post-large--one-third large--one-whole medium--one-whole small-grid__item">
          <div class="left_banner_img">
            {% if section.settings.link_5 != blank %}<a class="homebanner_half_img" href="{{ section.settings.link_5 }}">
		    {% if section.settings.image_5 != blank %}
            <img src="{{ section.settings.image_5 | img_url: 'master' }}" alt="{{ section.settings.title_5 }}" />
            {% else %}
            <img src="//via.placeholder.com/951x567">
            {% endif%}           
            <div class="image_detail">
              {% if section.settings.image_text_1 != blank %}
              <h3 class=" "  style="color:{{ section.settings.image_clr_1 }};">{{ section.settings.image_text_1 }}     </h3>   
              {% endif %}          
              {% if section.settings.subimage_text_1 != blank %}
              <h4 class=" "  style="color:{{ section.settings.subimage_clr_1 }};">{{ section.settings.subimage_text_1 }}     </h4>   
              {% endif %}
              {% if section.settings.image_btn_1 != blank %}
              <a href="{{ section.settings.link_5 }}"  class="btn">{{section.settings.image_btn_1}}</a>
              {% endif %}            
            </div> 
            </a>
            {% endif%}
          </div>
        </div>
        <div class="grid__item extra-large--one-third post-large--one-third large--one-whole medium--one-whole small-grid__item">
          <div class="home-banner-type-1-content">           
            <div class="sub_content wow fadeInDown animated">
              {% if section.settings.text_1 != blank %}
              <h5 class="small-title "  style="color:{{ section.settings.text_color }};">{{ section.settings.text_1 }}     </h5>   
              {% endif %}  
              {% if section.settings.title_1 != blank %}
              <h2 style="color:{{ section.settings.title_color }};">{{ section.settings.title_1 }} </h2>
              {% endif %}
              {% if section.settings.title_2 != blank %}
              <h3 style="color:{{ section.settings.title_2_color }};">{{ section.settings.title_2 }} </h3>
              {% endif %}
            </div>

            <div class="deal-clock lof-clock-timer-detail fadeInUp animated"></div>
            {% assign dealTime = section.settings.deal_end_date | replace: '_',' ' %}  
            <div class="deal-content wow fadeInUp animated">
              <script>
                //<![CDATA[
                jQuery(document).ready(function($){
                  $(".lof-clock-timer-detail").lofCountDown({      
                    TargetDate:"{{ dealTime }}",
                    DisplayFormat:"<ul class='list-inline'><li class='day fadeInUp animated'>%%D%%<span>Days</span></li><li class='hours'>%%H%%<span>Hours</span></li><li class='mins'>%%M%%<span>Minutes</span></li><li class='seconds'>%%S%%<span>Seconds</span></li></ul>",
                    FinishMessage: "Expired"
                  });
                });
                //]]>
              </script>

              {% if section.settings.deal_desc != blank %}
              <p style="color:{{section.settings.deal_desc_color}}">{{section.settings.deal_desc}}</p>
              {% endif %} 


              {% if section.settings.button_1 != blank %}
              <div class="deal-btn"> <a class="btn" href="{{ section.settings.link_1 }}" style="background:{{ section.settings.btn_bg_color }};color:{{ section.settings.btn_text_color }};">{{ section.settings.button_1 }}</a> </div>   
              {% endif %}         
            </div>  
          </div>
        </div>   

        <div class="grid__item extra-large--one-third post-large--one-third large--one-whole medium--one-whole small-grid__item">
          <div class="right_banner_img">

            {% if section.settings.link_6 != blank %}<a class="homebanner_half_img" href="{{ section.settings.link_6 }}">{% endif%}
            {% if section.settings.image_6 != blank %}
            <img src="{{ section.settings.image_6 | img_url: 'master' }}" alt="{{ section.settings.title_6 }}" />
            {% else %}
            <img src="//via.placeholder.com/951x567">
            {% endif%}           
            {% if section.settings.link_6 != blank %} 
            <div class="image_detail">
              {% if section.settings.image_text_2 != blank %}
              <h3 class=" "  style="color:{{ section.settings.image_clr_2 }};">{{ section.settings.image_text_2 }}     </h3>   
              {% endif %}          
              {% if section.settings.subimage_text_2 != blank %}
              <h4 class=" "  style="color:{{ section.settings.subimage_clr_2 }};">{{ section.settings.subimage_text_2 }}     </h4>   
              {% endif %}
              {% if section.settings.image_btn_2 != blank %}
              <a href="{{ section.settings.link_6 }}"  class="btn" >{{section.settings.image_btn_2}}</a>
              {% endif %}            
            </div> 
            </a>
            {% endif%}
          </div>
        </div>
      </div>
    </div>   
  </div>
  <style>
    .home-banner-with-text .lof-clock-timer-detail ul li,.home-banner-with-text .lof-clock-timer-detail ul li span { color:{{ section.settings.time_color }}; }
    .home-banner-with-text .content .lof-clock-timer-detail li:after { background:{{ section.settings.time_color }}; }
    .home-banner-with-text .content .deal-clock.lof-clock-timer-detail li{border-bottom:1px solid {{section.settings.border_time_color}};background:{{section.settings.bg_time_color | color_modify: 'alpha', 0.07 }};}
    .home-banner-with-text .content .lof-clock-timer-detail li::before{border-bottom: 7px solid {{section.settings.border_time_color}};}
    .home-banner-with-text .left_banner_img::after , .home-banner-with-text .right_banner_img::after {background:{{section.settings.overlay_color}};}
    .home-banner-with-text-1 .btn:hover { background:{{ section.settings.btn_bg_hover_color }} !important;color:{{ section.settings.btn_hover_text_color }} !important;}


  </style>
</div> 

