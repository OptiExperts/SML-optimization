
<div class="wrapper">
  <div class="jungle-slideshow">
    <div class="variable-width">
      {% for block in section.blocks %}
      {% if block.type == 'style_1' %}
      <div class="slick-list slider_style_1"> 
        {% include 'slider-data' %}
        <style> 
          .slider_style_1 .slider-content{padding:30px;}
          .slider_style_1 .slider-content-bg--{{ block.id }} .slide-offer-text span {color:{{block.settings.title_2_clr}}!important;}
          .slider_style_1 .slider-content-bg--{{ block.id }} .btn:hover {color:{{block.settings.btn_hovertxt_color}}!important;background:{{block.settings.btn_hoverbg_color}}!important;}
        /* @media screen and (min-width: 320px) and (max-width: 767px) {*/

            {% if block.settings.show_mobile_bg_overlay != blank %} 
            .slider_style_1 .slider-content-bg--{{ block.id }} {background:{{ block.settings.mobile_bg_clr | color_modify: 'alpha', 0.4 }};}
            {% endif %}

         /* }*/
        </style>
      </div>
      {% endif %}
      {% if block.type == 'style_2' %}
      <div class="slick-list slider_style_2">                
        {% include 'slider-data' %}
        <style> 
          .slider_style_2 .slider-content{padding:30px;}
          .slider_style_2 .slider-content-bg--{{ block.id }} .slide-offer-text span {color:{{block.settings.title_2_clr}}!important;}
          .slider_style_2 .slider-content-bg--{{ block.id }} .btn:hover {color:{{block.settings.btn_hovertxt_color}}!important;background:{{block.settings.btn_hoverbg_color}}!important;}

         /* @media screen and (min-width: 320px) and (max-width: 767px) {*/
            {% if block.settings.show_mobile_bg_overlay != blank %} 
            .slider_style_2 .slider-content-bg--{{ block.id }} {background:{{ block.settings.mobile_bg_clr | color_modify: 'alpha', 0.4 }};}
            {% endif %}

         /* }*/
        </style>
      </div>
      {% endif %}
      {% if block.type == 'style_3' %}
      <div class="slick-list slider_style_3">                
        {% include 'slider-data' %}
        <style> 
          .slider_style_3 .slider-content-bg--{{ block.id }} .slide-offer-text span {color:{{block.settings.title_2_clr}}!important;}
          .slider_style_3 .slider-content-bg--{{ block.id }} .btn:hover {color:{{block.settings.btn_hovertxt_color}}!important;background:{{block.settings.btn_hoverbg_color}}!important;}

        
            {% if block.settings.show_overlay_bg != blank %} 
            .slider_style_3 .slider-content-bg--{{ block.id }} {background:{{ block.settings.content_bg_clr | color_modify: 'alpha', 0.4 }};}
            {% endif %}
         

        </style>
      </div>
      {% endif %}
      {% endfor %}
    </div>
  </div>
</div>


<script>  
  $(document).on('ready', function() {
    $('.variable-width').slick({
      dots: true,
      slidesToScroll: 1,
      autoplay:true,
      fade: {{ section.settings.slideshow_transition }},
      autoplaySpeed:{{ section.settings.slideshow_speed }},
      afterChange: function(slick, currentSlide){
      console.log(currentSlide);
    }
                               });   
  })
</script>






