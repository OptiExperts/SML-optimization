<div class="container">
  <div class="grid__item">

    <div class="grid__item extra-large--two-tenths  post-large--two-tenths large--two-tenths medium-down--hide">
      {% if section.settings.display_search %}                
      <div id="pageheader">
        <div id="SearchDrawer" class="ajaxsearch search-bar">
          <div class="search-bar__table search-box">
            <form action="/search" method="get" class="search-bar__table-cell search-bar__form" role="search">
              <input type="hidden" name="type" value="product">  
              <div class="search-bar__table">
                <div class="search-bar__table-cell">
                  <input type="search" id="SearchInput" name="q" value="{{ search.terms | escape }}" placeholder="{{ 'general.search.placeholder' | t }}" aria-label="{{ 'general.search.placeholder' | t }}" class="search-bar__input">
                </div>
                <div class="search-bar__table-cell search-bar__icon-cell">
                  <button type="submit" class="search-bar__icon-button search-bar__submit">
                    <span class="fa fa-search" aria-hidden="true"></span>
                  </button>
                </div>
              </div>
            </form>
          </div>
        </div>
      </div>
      {% endif %}  
    </div>

    <div class="grid__item extra-large--six-tenths post-large--six-tenths large--six-tenths">  
      <div class="menu-tool">  
        <ul class="site-nav sticky-nav">
          {%- assign sticky_menu = section.settings.choose_sticky_menu %}
    {% for link in linklists[sticky_menu].links %}
          <li class="">
            <a class="{%if linklists[link.handle] != empty %}menu__moblie {% endif %} {% if link.active %}current{% endif %} {% cycle 'color1', 'color2', 'color3','color4', 'color5', 'color6','color7', 'color8', 'color9','color10', %}" href="{{ link.url }}">
              <span>         
                {{ link.title }}  {% if linklists[link.handle] != empty %}{% endif %}   
              </span>       
            </a> 
          </li>
          {% endfor %}
        </ul>
      </div>
    </div>

    <div class="grid__item extra-large--two-tenths  post-large--two-tenths large--two-tenths medium-down--hide">

      <ul class="menu-icon placement">
        <div class="menu-icon-inner">
          <li class="header-mobile">
            <div class="menu-block visible-phone"><!-- start Navigation Mobile  -->
              <div id="showLeftPush">
                <i class="fa fa-bars" aria-hidden="true"></i>

              </div>
            </div><!-- end Navigation Mobile  --> 
          </li>
          <li class="navigation-bar-right">

            <div class="slidedown_section">
              <a title="{{ 'layout.customer.log_in' | t }}" id="Togglemodal" class="icon-cart-arrow"><i class="fa fa-user" aria-hidden="true"></i></a>
              <div id="slidedown-modal">
                <div class="header-panel-top">
                  <ul>

                    {% if shop.customer_accounts_enabled or section.settings.display_wishlist %}
                    <li>
                      <div class="customer_account">                          
                        <ul>
                          {% if shop.customer_accounts_enabled %}
                          {% if customer %}
                          <li>
                            <a href="/account" title="{{ 'layout.customer.account' | t }}"><i class="fa fa-user" aria-hidden="true"></i> {{ 'layout.customer.account' | t }}</a>
                          </li>
                          <li class="logout-link">
                            <a href="/account/logout" title="{{ 'layout.customer.log_out' | t }}" data-value="value 1"><i class="fa fa-user" aria-hidden="true"></i> {{ 'layout.customer.log_out' | t }}</a>
                          </li>
                          {% else %}
                          <li>
                            <a href="/account/login" title="{{ 'layout.customer.log_in' | t }}"> <i class="fa fa-user-plus" aria-hidden="true"></i> {{ 'layout.customer.log_in' | t }}</a>
                          </li>
                          <li>
                            <a href="/account/register" title="{{ 'layout.customer.create_account' | t }}"> <i class="fa fa-user" aria-hidden="true"></i> {{ 'layout.customer.create_account' | t }}</a>
                          </li>          
                          {% endif %}  
                          {% endif %} 
                          {% if section.settings.display_wishlist %}
                          <li>
                            <a href="/pages/wishlist" title="{{ 'products.wishlist.wishlist_name' | t }}"> <i class="fa fa-heart" aria-hidden="true"></i> {{ 'products.wishlist.wishlist_name' | t }}</a>
                          </li>
                          {% endif %}
                        </ul>
                      </div>     
                    </li>
                    {% endif %}
                  </ul>
                </div>
              </div>
            </div>

          </li>



          {% if section.settings.display_search %} 
          <li class="mobile_search"><a href="/search"><i class="fa fa-search" aria-hidden="true"></i></a></li>
          {% endif %} 
          {% if settings.display_currency %} 
          <li class="header_currency">
            <ul class="tbl-list">
              <li class="currency dropdown-parent uppercase currency-block">
                <div class="selector-arrow {% if settings.display_currency %} show {% else %} hide{% endif %}">
                  <select class="currencies_src" id="currencies_sticky">
                    {% assign currency_1_length = settings.currency_1_unit | size %}
                    {% if currency_1_length > 0 %}
                    <option data-currency="{{settings.currency_1_unit}}" {% if shop.currency == settings.currency_1_unit %} selected {% endif %} value="{{settings.currency_1_unit}}">{{settings.currency_1_unit}}</option> 
                    {% endif %}
                    {% assign currency_2_length = settings.currency_2_unit | size %}
                    {% if currency_2_length > 0 %}
                    <option data-currency="{{settings.currency_2_unit}}" {% if shop.currency == settings.currency_2_unit %} selected {% endif %} value="{{settings.currency_2_unit}}">{{settings.currency_2_unit}}</option> 
                    {% endif %}
                    {% assign currency_3_length = settings.currency_3_unit | size %}
                    {% if currency_3_length > 0 %}
                    <option data-currency="{{settings.currency_3_unit}}" {% if shop.currency == settings.currency_3_unit %} selected {% endif %} value="{{settings.currency_3_unit}}">{{settings.currency_3_unit}}</option> 
                    {% endif %}
                    {% assign currency_4_length = settings.currency_4_unit | size %}
                    {% if currency_4_length > 0 %}
                    <option data-currency="{{settings.currency_4_unit}}" {% if shop.currency == settings.currency_4_unit %} selected {% endif %} value="{{settings.currency_4_unit}}">{{settings.currency_4_unit}}</option> 
                    {% endif %}
                    {% assign currency_5_length = settings.currency_5_unit | size %}
                    {% if currency_5_length > 0 %}
                    <option data-currency="{{settings.currency_5_unit}}" {% if shop.currency == settings.currency_5_unit %} selected {% endif %} value="{{settings.currency_5_unit}}">{{settings.currency_5_unit}}</option> 
                    {% endif %}
                    {% assign currency_1_length = settings.currency_6_unit | size %}
                    {% if currency_1_length > 0 %}
                    <option data-currency="{{settings.currency_6_unit}}" {% if shop.currency == settings.currency_6_unit %} selected {% endif %} value="{{settings.currency_6_unit}}">{{settings.currency_6_unit}}</option> 
                    {% endif %}
                    {% assign currency_2_length = settings.currency_7_unit | size %}
                    {% if currency_2_length > 0 %}
                    <option data-currency="{{settings.currency_7_unit}}" {% if shop.currency == settings.currency_7_unit %} selected {% endif %} value="{{settings.currency_7_unit}}">{{settings.currency_7_unit}}</option> 
                    {% endif %}
                    {% assign currency_3_length = settings.currency_8_unit | size %}
                    {% if currency_3_length > 0 %}
                    <option data-currency="{{settings.currency_8_unit}}" {% if shop.currency == settings.currency_8_unit %} selected {% endif %} value="{{settings.currency_8_unit}}">{{settings.currency_8_unit}}</option> 
                    {% endif %}
                    {% assign currency_4_length = settings.currency_9_unit | size %}
                    {% if currency_4_length > 0 %}
                    <option data-currency="{{settings.currency_9_unit}}" {% if shop.currency == settings.currency_9_unit %} selected {% endif %} value="{{settings.currency_9_unit}}">{{settings.currency_9_unit}}</option> 
                    {% endif %}
                    {% assign currency_5_length = settings.currency_10_unit | size %}
                    {% if currency_5_length > 0 %}
                    <option data-currency="{{settings.currency_10_unit}}" {% if shop.currency == settings.currency_10_unit %} selected {% endif %} value="{{settings.currency_10_unit}}">{{settings.currency_10_unit}}</option> 
                    {% endif %}
                  </select>
                </div>
              </li>
            </ul>
          </li> 

          <li class="header-bar__module cart header_cart">
            {% if section.settings.display_minicart %}
            <!-- Mini Cart Start -->
            <div class="baskettop">
              <div class="wrapper-top-cart-sticky">
                <a href="javascript:void(0)" id="ToggleDownSticky" class="icon-cart-arrow">
                  <i class="fa fa-shopping-bag" aria-hidden="true"></i>


                  <div class="detail">
                    <div id="cartCountSticky"> 
                      {{ cart.item_count }}
                    </div>
                    {% if cart.item_count == 0 or cart.item_count == 1 %}
                    <span class="cartCountspan">{{ 'cart.general.item' | t }}</span>
                    {% else %}  
                    <span class="cartCountspan">{{ 'cart.general.items' | t }} </span>
                    {% endif %}
                    <div id="minicart_total_sticky">
                      <span> {{ cart.total_price | money }}</span>
                    </div>
                  </div>
                </a> 
                <div id="slidedown-cart-sticky" style="display:none"> 
                  <div class="no-items">
                    <p>{{ 'cart.general.empty' | t }}</p>
                    <p class="text-continue"><a class="btn" href="javascript:void(0)">{{ 'cart.general.continue_shopping' | t }}</a></p>
                  </div>
                  <div class="has-items">
                    <ul class="mini-products-list">  
                      {% for item in cart.items %}
                      <li class="item" id="cart-item-{{item.id}}">
                        <a href="{{item.url}}" title="{{item.title}}" class="product-image">
                          <img src="{{ item.image | product_img_url: 'small' }}" alt="{{item.title}}"></a>
                        <div class="product-details">
                          <p class="product-name"><a href="{{item.url}}">{{ item.product.title }}
                            {% if item.product.variants.size != 0 %}
                            {% unless item.variant.title contains 'Default' %}
                            {{ item.variant.title }}
                            {% endunless %}
                            {% endif %}</a></p>
                          <div class="cart-collateral"><span class="price">{{item.price | money}}</span> x {{item.quantity}}</div>
                        </div>
                        <a href="javascript:void(0)" title="Remove This Item" class="btn-remove"><span class="material-icons">close</span></a>
                      </li>
                      {% endfor %}
                    </ul>
                    <div class="summary">                
                      <p class="total">
                        <span class="label">{{ 'cart.general.cart_total' | t }}</span>
                        <span class="price">{{cart.total_price | money}}</span> 
                      </p>
                    </div>
                    <div class="actions">
                      <button class="btn" onclick="window.location='/checkout'"><i class="material-icons">check</i>{{ 'cart.general.checkout' | t }}</button>
                      <button class="btn text-cart" onclick="window.location='/cart'"><i class="material-icons">shopping_cart</i>{{ 'cart.general.view_cart' | t }}</button>
                    </div>
                  </div>
                </div>
              </div>
            </div><!-- Mini Cart end -->  
            {% endif %} 
          </li>






        </div>

        {% endif %}



      </ul> 
    </div>

  </div> 
</div>

{% schema %}
{
"name": "Navigation Sticky",
"settings": [
{
"type": "link_list",
"id": "choose_sticky_menu",
"label": "Choose Sticky Menu"
},
{
"type": "header",
"content": "Search Block"
},
{
"type":"checkbox",
"id": "display_search",
"label": "Display search"	
},
{
"type": "header",
"content": "Minicart"
},
{
"type": "checkbox",
"id": "display_minicart",
"label": "Display minicart"
},
{
"type": "header",
"content": "Wishlist"
},
{
"type": "checkbox",
"id": "display_wishlist",
"label": "Display wishlist"
}
]
}
{% endschema %}

{% stylesheet %}
{% endstylesheet %}

{% javascript %}
{% endjavascript %}
